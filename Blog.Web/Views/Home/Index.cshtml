@model Blog.Web.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Eat Pray Garden";
}

<meta name="description" content="Welcome to Eat Pray Garden, home to all things plants, love, and life."/>

<style>
    .blog-card,
    .blog-card:hover {
        text-decoration: none;
        color: #212529;
    }
</style>

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 hero-section">
        <div class="col-12 col-lg-6">
            <h2 class="display-5 fw-bold lh-1 mb-3">
                @* <i style="font-weight: 400;">Eat Pray Garden</i> *@<span style="font-weight: 300;"><br />Living the Clean Life</span>
            </h2>
            <p class="lead" style="font-size: 1.2em;">
                Bringing you nutrient-dense information to satiate your hunger
                for truth and clarity.
                Feed your mind, body, and soul. Maybe even your pet!
            </p>
        </div>

        <div class="col-12 col-lg-6 homepage-img">
            <img class="d-block mx-lg-auto img-fluid" src="/images/homey-img.JPG" alt="" />
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center blogs-home-container">
        <div class="col-md-6">
            
            @if(Model != null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {
                    <a class="blog-card" asp-area="" 
                        asp-controller="Blogs" 
                        asp-action="Index" 
                        asp-route-urlHandle="@blogPost.UrlHandle">

                        <div class="mb-5 bg-light box-shadow p-4 rounded-2 photo">
                            <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                                 class="mb-2 d-block img-fluid">
                            <h2 class="mb-4">@blogPost.Heading</h2>
                            <p class="mb-3">
                                Author: @blogPost.Author
                                <br>
                                Published Date: @blogPost.PublishedDate.ToShortDateString()
                            </p>

                            <div class="mb-3">
                            </div>

                            <p class="mb-3">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </p>

                            <p class="mb-3">@blogPost.ShortDescription</p>

                            <a class="btn btn-dark"
                               asp-area=""
                               asp-controller="Blogs"
                               asp-action="Index"
                               asp-route-urlHandle="@blogPost.UrlHandle">
                                Read More &rarr;
                            </a>
                        </div>
                    </a>
                }
            }

        </div>
    </div>
</div>
